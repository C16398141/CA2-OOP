class Droids extends Body {
 
  float cx;
  float cy;
  float r,t;
  
  Droids(Snakehead head){
    cx=head.x;
    cy=head.y;
    diameter=5;
    r=head.diameter*2;
  }
  
  void draw(Snakehead head,int i)
  {
    cx=head.x;
    cy=head.y;
    t = millis()/400.0;
    x = (int)(cx+r*cos(t*i));
    y = (int)(cy+r*sin(t*i));
    
    ellipse(x,y,diameter,diameter);

  }
}
